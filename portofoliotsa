    <script>
        // Data Configuration
        const skillsData = [
            { name: "HTML5", color: "bg-orange-100 text-orange-600 border-orange-200" },
            { name: "CSS3", color: "bg-blue-100 text-blue-600 border-blue-200" },
            { name: "JavaScript", color: "bg-yellow-100 text-yellow-700 border-yellow-200" },
            { name: "React JS", color: "bg-cyan-100 text-cyan-600 border-cyan-200" },
            { name: "Git", color: "bg-red-100 text-red-600 border-red-200" },
        ];

        const projectsData = [
            {
                title: "To-Do List App",
                category: "Latihan React",
                description: "Aplikasi pencatat tugas sederhana dengan fitur tambah, hapus, dan tandai selesai.",
                theme: "from-blue-500 to-cyan-400",
                shadow: "shadow-blue-200",
                icon: "fa-solid fa-layer-group"
            },
            {
                title: "Personal Blog",
                category: "HTML & CSS",
                description: "Website blog statis yang responsif, dibuat untuk melatih kemampuan layouting CSS.",
                theme: "from-purple-500 to-pink-500",
                shadow: "shadow-purple-200",
                icon: "fa-solid fa-code"
            },
            {
                title: "Kalkulator Sederhana",
                category: "JavaScript Logic",
                description: "Kalkulator fungsional untuk menghitung operasi matematika dasar.",
                theme: "from-amber-500 to-orange-400",
                shadow: "shadow-orange-200",
                icon: "fa-solid fa-database"
            },
            {
                title: "Clone Landing Page",
                category: "Slicing UI",
                description: "Meniru desain website populer untuk melatih ketelitian visual dan struktur HTML.",
                theme: "from-emerald-500 to-teal-400",
                shadow: "shadow-emerald-200",
                icon: "fa-solid fa-wand-magic-sparkles"
            }
        ];

        // Mobile Menu Logic
        const menuBtn = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = document.getElementById('menu-icon');

        menuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            menuIcon.classList.toggle('fa-bars');
            menuIcon.classList.toggle('fa-xmark');
        });

        // Close menu on link click
        document.querySelectorAll('.mobile-link').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
                menuIcon.classList.replace('fa-xmark', 'fa-bars');
            });
        });

        // Render Skills
        const skillsContainer = document.getElementById('skills-container');
        skillsData.forEach(skill => {
            const span = document.createElement('span');
            span.className = `px-6 py-3 rounded-2xl text-sm font-bold border-2 transition-all duration-300 hover:scale-110 cursor-default shadow-sm ${skill.color}`;
            span.innerText = skill.name;
            skillsContainer.appendChild(span);
        });

        // Render Projects
        const projectsContainer = document.getElementById('projects-container');
        projectsData.forEach(project => {
            const card = `
                <div class="group bg-white rounded-[2rem] p-8 shadow-sm border border-slate-100 hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br ${project.theme} opacity-5 -mr-10 -mt-10 rounded-full group-hover:opacity-10 transition-opacity"></div>
                    
                    <div class="flex justify-between items-start mb-6 relative z-10">
                        <div class="p-4 rounded-2xl bg-gradient-to-br ${project.theme} text-white shadow-lg ${project.shadow}">
                            <i class="${project.icon} text-xl"></i>
                        </div>
                        <a href="#" class="p-2 bg-slate-50 rounded-xl text-slate-400 hover:text-indigo-600 hover:bg-indigo-50 transition-all">
                            <i class="fa-solid fa-arrow-up-right-from-square"></i>
                        </a>
                    </div>
                    
                    <span class="text-xs font-black uppercase tracking-widest text-indigo-400 mb-2 block">
                        ${project.category}
                    </span>
                    <h3 class="text-2xl font-black text-slate-800 mb-3 group-hover:text-indigo-600 transition-colors">
                        ${project.title}
                    </h3>
                    <p class="text-slate-500 mb-8 leading-relaxed font-medium">
                        ${project.description}
                    </p>

                    <div class="flex items-center text-sm font-black text-indigo-600 cursor-pointer">
                        <span class="relative border-b-2 border-transparent hover:border-indigo-600 transition-all">
                            Pelajari Selengkapnya
                        </span>
                        <span class="ml-2 transform group-hover:translate-x-2 transition-transform">‚Üí</span>
                    </div>
                </div>
            `;
            projectsContainer.innerHTML += card;
        });

        // Update Year
        document.getElementById('year').innerText = new Date().getFullYear();
    </script>
